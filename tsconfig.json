{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "alwaysStrict": true,
      "declaration": true,
      "target": "ES2018",
      "module": "commonjs",
      "lib": [
          "es2018"
      ],
      "allowJs": true,
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "inlineSources": true,
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "typeRoots": [
          "./node_modules/@types"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        "lib"
    ],
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
}